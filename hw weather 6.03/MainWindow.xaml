<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Погода" Height="350" Width="525">
    <Grid>
        <TextBox Name="CityTextBox" Width="200" Height="30" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0"
                 TextChanged="CityTextBox_TextChanged"/>

        <TextBlock Name="WatermarkTextBlock" Text="Введіть місто" Foreground="Gray"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,42,0,0"
                   IsHitTestVisible="False"/>

        <Button Name="GetWeatherButton" Content="Отримати погоду" Width="200" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="252,35,0,0"
                Click="GetWeatherButton_Click"/>

        <TextBlock Name="WeatherInfoTextBlock" Width="300" Height="150"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,110,0,0"
                   TextWrapping="Wrap" FontSize="16"/>
    </Grid>
</Window>
